<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_14sdp"
    android:paddingTop="@dimen/_4sdp"
    android:background="@color/blackblue">

    <ImageView
        android:id="@+id/iv_history_icon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center"
        android:layout_marginStart="26dp"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close_icon" />

    <TextView
        android:id="@+id/tv_history_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/avenir_next_medium"
        android:gravity="center|left"
        android:maxLength="30"
        android:singleLine="true"
        android:layout_gravity="center"
        android:text="@string/sasitharan"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_history_icon"
        app:layout_constraintEnd_toStartOf="@+id/iv_close_delete"
        app:layout_constraintStart_toEndOf="@+id/iv_history_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_history_icon" />

    <ImageView
        android:id="@+id/iv_close_delete"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_gravity="center"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_history_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_history_user_name"
        app:srcCompat="@drawable/ic_baseline_close_24" />

    <View
        android:id="@+id/view_line_history"
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:stretchColumns="0,2,4"
        android:background="@color/LightSlateGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_close_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>